<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".Sign_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:text="Create an account"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete the sign up process to get started"
                android:textColor="#A6A6A6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Full name"

                android:textColor="#A6A6A6" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Ivanov Ivan"
                android:textColor="#A6A6A6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Phone Number"
                android:textColor="#A6A6A6" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="phone"
                android:hint="+7(999)999-99-99"
                android:textColor="#A6A6A6" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Email Address"
                android:textColor="#A6A6A6" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="***********@gmail.com"
                android:textColor="#A6A6A6" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Password"
                android:textColor="#A6A6A6" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:layout_height="67dp"
                android:inputType="textPassword"
                android:hint="**********"
                android:textColor="#A6A6A6"
                android:drawableEnd="@drawable/eyeslash"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Confirm Password"
                android:textColor="#A6A6A6" />

            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="**********"
                android:textColor="#A6A6A6"
                android:drawableEnd="@drawable/eyeslash" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="@string/str7"
                android:textColor="#A6A6A6"
                android:buttonTint="#2F80ED"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:backgroundTint="#A7A7A7"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textSize="20dp"
                app:cornerRadius="4.96dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="center"
               >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="0dp"
                    android:text="Already have an account?"
                    android:textAlignment="textEnd"
                    android:textColor="#A6A6A6" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="log_in"
                    android:text="Sign in"
                    android:textColor="#2F80ED"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="19dp"
                android:text="or sign in using"
                android:textColor="#A6A6A6" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/google" />



        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/appCompatEditTeddxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_view"
        android:drawableEnd="@drawable/search_normal"
        android:hint="Search services"
        android:paddingStart="12dp"
        android:paddingTop="9dp"
        android:paddingEnd="10dp"
        android:paddingBottom="9dp"
        android:textColorHint="#A7A7A7"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profileinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditTeddxt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Special for you"
        android:textColor="#EC8000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:src="@drawable/arrow_square_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/framee"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView18" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView18" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="What would you like to do"
        android:textColor="@color/bluee"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/card_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView19">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text"
            android:layout_alignTop="@+id/text"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/men" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men"
            android:layout_marginTop="6dp"
            android:text="Customer Care"
            android:textColor="@color/bluee"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men"
            android:layout_marginTop="28dp"
            android:text="Our customer care service line is \navailable from 8 - 9pm week days and \n9 - 5 weekends - tap to call us today"
            android:textColor="#3A3A3A"
            android:textSize="8sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/card_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView19">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="gotosendpackage_2"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/men1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text1"
            android:layout_alignTop="@+id/text1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/codicon_package" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men1"
            android:layout_marginTop="6dp"
            android:text="Send a package"
            android:textColor="@color/bluee"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/description1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men1"
            android:layout_marginTop="28dp"
            android:text="Request for a driver to pick up or \ndeliver your package for you"
            android:textColor="#3A3A3A"
            android:textSize="8sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/card_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/men2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text2"
            android:layout_alignTop="@+id/text2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/healthicons_call_centre" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/name2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men2"
            android:layout_marginTop="6dp"
            android:text="Fund your wallet"
            android:textColor="@color/bluee"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/description2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men2"
            android:layout_marginTop="28dp"
            android:text="To fund your wallet is as easy as ABC, \nmake use of our fast technology and top-up your wallet today"
            android:textColor="#3A3A3A"
            android:textSize="8sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/card_bg"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/men3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text3"
            android:layout_alignTop="@+id/text3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/vector__3_" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men3"
            android:layout_marginTop="6dp"
            android:text="Chats"
            android:textColor="@color/bluee"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/description3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/men3"
            android:layout_marginTop="28dp"
            android:text="Search for available rider within your area"
            android:textColor="#3A3A3A"
            android:textSize="8sp" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>